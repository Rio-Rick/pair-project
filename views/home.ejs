<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="http://localhost:3003/css/style.css">
	<!-- <script src="main.js" defer></script> -->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <% if(userId) {%>
        <%- include('./componnent/navbarLog.ejs',{userId}) %>
    <% } else {%>
        <%- include('./componnent/navbar.ejs') %>
    <% } %>

    <% for (let key of memePost) { %>
        <div class="card position-relative top-0 start-0" style="width: 50rem; margin: auto;">
          <img src="http://localhost:3003/images/<%= key.image %>" class="card-img-top" alt="http://localhost:3003/<%= key.image%>">
          
          <div class="card-body">
            <h5 class="card-title"><%= key.title %></h5>
            <p class="card-text"><%= key.caption %></p>
            <p class="card-text"><%= key.time() %></p>

          </div>
          
          <div class="post" data-post-id="7712">
            <!-- <img class="post-image" src="https://placehold.co/600x400" alt="Post Image"> -->
            <div class="post-ratings-container">
              <div class="post-rating">
                <span class="post-rating-button material-icons">thumb_up</span>
                <span class="post-rating-count">0</span>
              </div>
            </div>
          </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>